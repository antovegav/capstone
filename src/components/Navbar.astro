---
import Sidebar from './Sidebar.astro';

---

<!-- NAVBAR -->
    <!-- Nav fijado, compatible con modo oscuro -->
    <!-- <nav class="fixed top-0 z-50 w-full bg-white border-b border-gray-200 dark:bg-gray-800 dark:border-gray-700"> -->
    <nav class="fixed top-0 z-50 w-full" style="background-color: #000000;">
        <!-- Padding con ajustes de pantallas -->
    <div class="px-3 py-3 lg:px-5 lg:pl-3">
        <div class="flex items-center justify-between"> <!-- Centra y espacia los elementos -->
        <div class="flex items-center justify-start rtl:justify-end">
            <!-- Boton para abrir sidebar desde el celu -->
            <button data-drawer-target="logo-sidebar" data-drawer-toggle="logo-sidebar" aria-controls="logo-sidebar" type="button" class="inline-flex items-center p-2 text-sm text-gray-500 rounded-lg sm:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
                <span class="sr-only">Abrir Menu</span> <!-- Solo para lectores de pantalla -->
                <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"> <!-- Barras menu -->
                <path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path>
                </svg>
            </button>
            <!-- Logo -->
            <a href="#" class="flex ms-2 md:me-24">
            <!-- <span class="self-center text-xl font-semibold sm:text-2xl whitespace-nowrap">
                <span style="color: #fcb32e;" class="inline-flex">Duoc</span>
                <span style="color: #ffffff;" class="inline-flex">Uc</span>
            </span> -->
            <img src="https://i.imgnest.com/uLmdo.png" class="h-8 me-3" style="height: 40px;" alt="DuocUc Logo" />
            </a>
        </div>

        <!-- Perfil -->
        <div class="flex items-center">
            <div class="flex items-center ms-3">
                <div>
                <button type="button" class="flex text-sm bg-gray-800 rounded-full focus:ring-4 focus:ring-gray-300 dark:focus:ring-gray-600" aria-expanded="false" data-dropdown-toggle="dropdown-user">
                    <span class="sr-only">Menu de Usuario</span>
                    <img class="w-8 h-8 rounded-full" src="https://lh3.googleusercontent.com/a/ACg8ocKbdE5vB4igq_T0C2wDj0TZkHq-5vmKoB9IU4Tv-xb8SG-ZIw=s318-c-mo-no" alt="user photo">
                </button>
                </div>
                <div class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded-sm shadow-sm dark:bg-gray-700 dark:divide-gray-600" id="dropdown-user">
                <!-- Datos Usuario -->
                <div class="px-4 py-3" role="none">
                    <p class="text-sm text-gray-900 dark:text-white" role="none">
                    Nombre Apellido
                    </p>
                    <p class="text-sm font-medium text-gray-900 truncate dark:text-gray-300" role="none">
                    nombre.apellido@duoc.cl
                    </p>
                </div>
                <!-- Opciones del Usuario -->
                <ul class="py-1" role="none">
                    <li>
                    <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-600 dark:hover:text-white" role="menuitem">Registros</a>
                    </li>
                    <li>
                    <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-600 dark:hover:text-white" role="menuitem">Configuraciones</a>
                    </li>
                    <li>
                    <!-- <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-600 dark:hover:text-white" role="menuitem">Earnings</a> -->
                    </li>
                    <li>
                    <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-600 dark:hover:text-white" role="menuitem">Salir</a>
                    </li>
                </ul>
                </div>
            </div>
            </div>
        </div>
    </div>
    </nav>

